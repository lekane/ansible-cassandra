[plain_cassandra_nodes]
<CASSANDRA_NODE1> node_ip=<CASSANDRA_NODE1_IP> seed=true dc=DC1 rack=RAC1
<CASSANDRA_NODE2> node_ip=<CASSANDRA_NODE2_IP> seed=true dc=DC1 rack=RAC1
<CASSANDRA_NODE3> node_ip=<CASSANDRA_NODE3_IP> seed=true dc=DC1 rack=RAC1
<CASSANDRA_NODE4> node_ip=<CASSANDRA_NODE4_IP> seed=true dc=DC1 rack=RAC1

[plain_cassandra_nodes:vars]
spark_enabled=false

[spark_nodes]
<SPARK_NODE1> node_ip=<NODE_IP_FOR_CASSANDRA> spark_node_ip=<NODE_IP_FOR_SPARK> seed=true dc=DC2 rack=RAC1
<SPARK_NODE2> node_ip=<NODE_IP_FOR_CASSANDRA> spark_node_ip=<NODE_IP_FOR_SPARK> seed=true dc=DC2 rack=RAC1
<SPARK_NODE3> node_ip=<NODE_IP_FOR_CASSANDRA> spark_node_ip=<NODE_IP_FOR_SPARK> seed=false dc=DC2 rack=RAC1

[cassandra_nodes:children]
plain_cassandra_nodes
spark_nodes

[cassandra_nodes:vars]
s3_backup_enabled=false
s3_backup_environment=aws
s3_backup_host=<host>
s3_backup_bucket=<bucket>
s3_backup_keyspaces=<keyspace>
s3_backup_access_key=<access_key>
s3_backup_secret_key=<secret_key>
ignore_shutdown_errors=false

[opscenter_nodes]
<OPSCENTER_NODE> node_ip=<OPSCENTER_NODE_IP>

[opscenter_nodes:vars]
spark_enabled=false

[spark_master_nodes]
<SPARK_MASTER_NODE> node_ip=<SPARK_MASTER_NODE_IP_FOR_CASSANDRA> spark_node_ip=<NODE_IP_FOR_SPARK> spark_master_ip=<SPARK_MASTER_NODE_IP_FOR_SPARK>

[all_spark_nodes:children]
spark_nodes
spark_master_nodes

[all_spark_nodes:vars]
spark_enabled=true
spark_cassandra_connection_host=<SPARK_CASSANDRA_CONNECTION_HOST>
spark_datacenter=DC2

[all_cassandra_nodes:children]
cassandra_nodes
opscenter_nodes
spark_master_nodes

[all_cassandra_nodes:vars]
ansible_ssh_private_key_file=<SSH_PEM>
ansible_ssh_user=ubuntu
install_user=ubuntu
deployment_environment=aws
data_disk_environment=ephemeral_raid
install_version=dce
opscenter_enabled=true
dse_username=<DSE user>
dse_password=<DSE password>
